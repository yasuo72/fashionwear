# Database Configuration
DATABASE_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/fashionfusion?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/fashionfusion?retryWrites=true&w=majority

# JWT Secret (Generate a random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Session Secret (Generate a random string)
SESSION_SECRET=your_session_secret_change_this_in_production

# Node Environment
NODE_ENV=development

# API URL (Update with your Railway domain in production)
# Local: http://localhost:5000
# Production: https://your-app.up.railway.app
VITE_API_URL=http://localhost:5000

# Optional: Payment Gateway Configuration
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Cloudinary (for image uploads - Optional)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# News API (for blog posts - Optional)
# Get your free API key from: https://newsapi.org/register
VITE_NEWS_API_KEY=your_newsapi_key_here

# Port Configuration
PORT=5000
